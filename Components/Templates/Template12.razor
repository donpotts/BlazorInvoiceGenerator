@namespace BlazorInvoiceGenerator.Components.Templates
@inherits BaseTemplate
@using BlazorInvoiceGenerator.Utils

<BaseTemplate Data="@Data">
    <div style="width: 816px; min-width: 816px; max-width: 816px; height: 1056px; min-height: 1056px; max-height: 1056px; background: white; margin: 0 auto; box-sizing: border-box; padding: 48px; display: flex; flex-direction: column; page-break-after: always;">
        <!-- Header Section -->
        <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 2rem;">
            <div>
                <h1 style="font-size: 2.5rem; font-weight: bold; margin: 0 0 1rem 0; color: #059669;">Invoice</h1>
                <div style="font-size: 0.875rem; color: #374151; line-height: 1.6;">
                    <p style="margin: 0.25rem 0;"><strong>Invoice#:</strong> @InvoiceData.Invoice?.Number</p>
                    <p style="margin: 0.25rem 0;"><strong>Invoice Date:</strong> @(InvoiceData.Invoice?.Date.ToString("MMM dd, yyyy") ?? "N/A")</p>
                    <p style="margin: 0.25rem 0;"><strong>Due Date:</strong> @(InvoiceData.Invoice?.PaymentDate.ToString("MMM dd, yyyy") ?? "N/A")</p>
                </div>
            </div>
            <div style="text-align: right; font-size: 0.875rem; color: #374151; line-height: 1.6;">
                <p style="margin: 0.25rem 0; font-weight: bold;">@InvoiceData.YourCompany?.Name</p>
                <p style="margin: 0.25rem 0; display: flex; align-items: center; justify-content: flex-end;">
                    <span style="margin-right: 0.5rem; color: #9ca3af;">üìç</span>
                    <span>@InvoiceData.YourCompany?.Address</span>
                </p>
                <p style="margin: 0.25rem 0; display: flex; align-items: center; justify-content: flex-end;">
                    <span style="margin-right: 0.5rem; color: #9ca3af;">üìû</span>
                    <span>@InvoiceData.YourCompany?.Phone</span>
                </p>
            </div>
        </div>
        <!-- Billing Section -->
        <div style="display: flex; justify-content: space-between; margin-bottom: 2rem;">
            <div>
                <h3 style="font-size: 1rem; font-weight: 600; margin: 0 0 0.5rem 0; color: #059669;">Billed by</h3>
                <div style="font-size: 0.875rem; color: #374151; line-height: 1.6;">
                    <p style="margin: 0.25rem 0; font-weight: bold;">@InvoiceData.YourCompany?.Name</p>
                    <p style="margin: 0.25rem 0; display: flex; align-items: center;">
                        <span style="margin-right: 0.5rem; color: #9ca3af;">üìç</span>
                        <span>@InvoiceData.YourCompany?.Address</span>
                    </p>
                    <p style="margin: 0.25rem 0; display: flex; align-items: center;">
                        <span style="margin-right: 0.5rem; color: #9ca3af;">üìû</span>
                        <span>@InvoiceData.YourCompany?.Phone</span>
                    </p>
                </div>
            </div>
            <div>
                <h3 style="font-size: 1rem; font-weight: 600; margin: 0 0 0.5rem 0; color: #059669;">Billed to</h3>
                <div style="font-size: 0.875rem; color: #374151; line-height: 1.6;">
                    <p style="margin: 0.25rem 0; font-weight: bold;">@InvoiceData.BillTo?.Name</p>
                    <p style="margin: 0.25rem 0; display: flex; align-items: center;">
                        <span style="margin-right: 0.5rem; color: #9ca3af;">üìç</span>
                        <span>@InvoiceData.BillTo?.Address</span>
                    </p>
                    <p style="margin: 0.25rem 0; display: flex; align-items: center;">
                        <span style="margin-right: 0.5rem; color: #9ca3af;">üìû</span>
                        <span>@InvoiceData.BillTo?.Phone</span>
                    </p>
                </div>
            </div>
        </div>
        <!-- Items Table -->
        <div style="margin-bottom: 2rem; flex-grow: 1;">
            <table style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="background: #059669; color: white;">
                        <th style="padding: 0.75rem; text-align: left; font-size: 0.875rem; font-weight: 600;">Item #/Item Description</th>
                        <th style="padding: 0.75rem; text-align: left; font-size: 0.875rem; font-weight: 600;">Model</th>
                        <th style="padding: 0.75rem; text-align: center; font-size: 0.875rem; font-weight: 600;">Qty.</th>
                        <th style="padding: 0.75rem; text-align: right; font-size: 0.875rem; font-weight: 600;">Rate</th>
                        <th style="padding: 0.75rem; text-align: right; font-size: 0.875rem; font-weight: 600;">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @if (InvoiceData.Items != null)
                    {
                        @for (int i = 0; i < InvoiceData.Items.Count; i++)
                        {
                            var item = InvoiceData.Items[i];
                            <tr style="border-bottom: 1px solid #e5e7eb;">
                                <td style="padding: 0.75rem;">
                                    <div style="font-weight: 600;">@((i + 1)). @item.Name</div>
                                    <div style="font-size: 0.75rem; color: #6b7280;">@item.Description</div>
                                </td>
                                <td style="padding: 0.75rem;">@item.Model</td>
                                <td style="padding: 0.75rem; text-align: center;">@item.Quantity</td>
                                <td style="padding: 0.75rem; text-align: right;">@FormatCurrency(item.Amount, InvoiceData.SelectedCurrency)</td>
                                <td style="padding: 0.75rem; text-align: right;">@FormatCurrency(item.Total, InvoiceData.SelectedCurrency)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <!-- Bottom Section -->
        <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 2rem;">
            <!-- Notes -->
            <div style="flex: 1; margin-right: 2rem;">
                @if (!string.IsNullOrEmpty(InvoiceData.Notes))
                {
                    <div style="background: #fef9c3; border: 1px solid #fde047; border-radius: 8px; padding: 1rem;">
                        <div style="display: flex; align-items: flex-start;">
                            <span style="margin-right: 0.75rem; color: #f59e42; margin-top: 0.125rem;">üìù</span>
                            <div>
                                <h4 style="font-size: 0.875rem; font-weight: 600; color: #059669; margin: 0 0 0.25rem 0;">Notes</h4>
                                <p style="font-size: 0.875rem; color: #374151; margin: 0;">@InvoiceData.Notes</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- Totals -->
            <div style="min-width: 200px;">
                <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                    <span style="font-size: 0.875rem;">Sub Total:</span>
                    <span style="font-size: 0.875rem;">@FormatCurrency(InvoiceData.SubTotal, InvoiceData.SelectedCurrency)</span>
                </div>
                @if (InvoiceData.TaxPercentage > 0)
                {
                    <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                        <span style="font-size: 0.875rem;">Tax (@InvoiceData.TaxPercentage%):</span>
                        <span style="font-size: 0.875rem;">@FormatCurrency(InvoiceData.TaxAmount, InvoiceData.SelectedCurrency)</span>
                    </div>
                }
                <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-top: 1px solid #e5e7eb; font-weight: bold; font-size: 1.125rem;">
                    <span>Total:</span>
                    <span>@FormatCurrency(InvoiceData.GrandTotal, InvoiceData.SelectedCurrency)</span>
                </div>
            </div>
        </div>
        <!-- Footer -->
        <div style="margin-top: auto; padding-top: 1rem; border-top: 1px solid #e5e7eb; text-align: center; margin-bottom: 2.5rem;">
            <p style="font-size: 0.75rem; color: #059669; margin: 0;">Thank you for your business!</p>
        </div>
    </div>
</BaseTemplate>

@code {
    private InvoiceData InvoiceData => Data as InvoiceData ?? new InvoiceData();

    private string FormatCurrency(decimal amount, string? currency)
    {
        // Always use USD formatting
        return string.Format("{0:C}", amount);
    }
}