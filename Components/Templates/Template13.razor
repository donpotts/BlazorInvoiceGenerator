@using BlazorInvoiceGenerator.Utils
@using BlazorInvoiceGenerator.Components
@inject NavigationManager Navigation

<BaseTemplate Data="@Data">
    <div style="width: 816px; min-width: 816px; max-width: 816px; height: 1056px; min-height: 1056px; max-height: 1056px; background: white; margin: 0 auto; box-sizing: border-box; padding: 48px; display: flex; flex-direction: column; page-break-after: always;">
        <!-- Professional Invoice Header -->
        <div style="background: #b91c1c; color: white; padding: 3.5rem 2rem 2rem 2rem; border-radius: 8px 8px 0 0; overflow: hidden; min-height: 120px; display: flex; align-items: flex-end;">
            <div style="display: flex; justify-content: space-between; align-items: flex-end; width: 100%;">
                <div>
                    <h1 style="font-size: 2.5rem; font-weight: bold; margin: 0 0 0.5rem 0;">INVOICE</h1>
                </div>
                <div style="text-align: right;">
                    <div style="color: #fca5a5; font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.05em;">Invoice Number</div>
                    <div style="font-size: 1.5rem; font-weight: bold; margin-top: 0.25rem;">@Data.Invoice?.Number</div>
                </div>
            </div>
        </div>
        <!-- Main Content -->
        <div style="padding: 2rem 0 0 0; flex: 1 1 auto; display: flex; flex-direction: column;">
            <!-- Company, Bill/Ship To, etc. -->
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-bottom: 2rem; margin-top: 0;">
                <div>
                    <div style="margin-bottom: 0.5rem;">
                        <span style="font-size: 0.75rem; font-weight: 600; color: #991b1b; text-transform: uppercase; letter-spacing: 0.05em;">From</span>
                    </div>
                    <div style="background: #fef2f2; padding: 1rem; border-radius: 8px; border-left: 4px solid #b91c1c;">
                        <div style="font-size: 1.125rem; font-weight: bold; color: #991b1b; margin-bottom: 0.5rem;">@Data.YourCompany?.Name</div>
                        <div style="font-size: 0.875rem; color: #991b1b;">
                            <div style="display: flex; align-items: center; margin-bottom: 0.25rem;">
                                <span style="margin-right: 0.5rem; color: #ef4444;">📍</span>
                                <span>@Data.YourCompany?.Address</span>
                            </div>
                            <div style="display: flex; align-items: center;">
                                <span style="margin-right: 0.5rem; color: #ef4444;">📞</span>
                                <span>@Data.YourCompany?.Phone</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <div style="margin-bottom: 0.5rem;">
                        <span style="font-size: 0.75rem; font-weight: 600; color: #991b1b; text-transform: uppercase; letter-spacing: 0.05em;">Invoice Details</span>
                    </div>
                    <div style="background: #fee2e2; padding: 1rem; border-radius: 8px; border-left: 4px solid #b91c1c;">
                        <div style="font-size: 0.875rem;">
                            <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                                <span style="color: #991b1b;">Issue Date:</span>
                                <span style="font-weight: 600; color: #991b1b;">@(Data.Invoice?.Date.ToString("MMM dd, yyyy") ?? "N/A")</span>
                            </div>
                            <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                                <span style="color: #991b1b;">Due Date:</span>
                                <span style="font-weight: 600; color: #991b1b;">@(Data.Invoice?.PaymentDate.ToString("MMM dd, yyyy") ?? "N/A")</span>
                            </div>
                            <div style="display: flex; justify-content: space-between;">
                                <span style="color: #991b1b;">Currency:</span>
                                <span style="font-weight: 600; color: #991b1b;">US Dollar ($)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-bottom: 2rem; margin-top: 0;">
                <div>
                    <div style="margin-bottom: 0.5rem; display: flex; align-items: center;">
                        <span style="margin-right: 0.5rem; color: #f59e42;">💼</span>
                        <span style="font-size: 0.75rem; font-weight: 600; color: #991b1b; text-transform: uppercase; letter-spacing: 0.05em;">Bill To</span>
                    </div>
                    <div style="background: #fef9c3; padding: 1rem; border-radius: 8px; border-left: 4px solid #f59e42;">
                        <div style="font-size: 0.875rem; color: #991b1b;">
                            <div style="font-weight: 600; margin-bottom: 0.25rem;">@Data.BillTo?.Name</div>
                            <div style="color: #991b1b; margin-bottom: 0.25rem;">@Data.BillTo?.Address</div>
                            <div style="color: #991b1b;">@Data.BillTo?.Phone</div>
                        </div>
                    </div>
                </div>
                <div>
                    <div style="margin-bottom: 0.5rem; display: flex; align-items: center;">
                        <span style="margin-right: 0.5rem; color: #38bdf8;">🚚</span>
                        <span style="font-size: 0.75rem; font-weight: 600; color: #991b1b; text-transform: uppercase; letter-spacing: 0.05em;">Ship To</span>
                    </div>
                    <div style="background: #e0f2fe; padding: 1rem; border-radius: 8px; border-left: 4px solid #38bdf8;">
                        <div style="font-size: 0.875rem; color: #991b1b;">
                            <div style="font-weight: 600; margin-bottom: 0.25rem;">@Data.ShipTo?.Name</div>
                            <div style="color: #991b1b; margin-bottom: 0.25rem;">@Data.ShipTo?.Address</div>
                            <div style="color: #991b1b;">@Data.ShipTo?.Phone</div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Items Table -->
            <div style="margin-bottom: 2rem; flex: 1;">
                <div style="background: white; border-radius: 8px; overflow: hidden; border: 1px solid #fecaca;">
                    <div style="background: #991b1b; color: white; padding: 0.5rem 1rem;">
                        <h3 style="font-size: 0.875rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; margin: 0;">Items</h3>
                    </div>
                    <table style="width: 100%; table-layout: fixed; font-size: 0.75rem;">
                        <thead style="background: #fef2f2;">
                            <tr>
                                <th style="padding: 0.5rem 1rem; text-align: left; font-size: 0.75rem; font-weight: 500; color: #991b1b; text-transform: uppercase; letter-spacing: 0.05em; width: 40%;">Description</th>
                                <th style="padding: 0.5rem 1rem; text-align: left; font-size: 0.75rem; font-weight: 500; color: #991b1b; text-transform: uppercase; letter-spacing: 0.05em; width: 15%;">Model</th>
                                <th style="padding: 0.5rem 1rem; text-align: center; font-size: 0.75rem; font-weight: 500; color: #991b1b; text-transform: uppercase; letter-spacing: 0.05em; width: 10%;">Qty</th>
                                <th style="padding: 0.5rem 1rem; text-align: right; font-size: 0.75rem; font-weight: 500; color: #991b1b; text-transform: uppercase; letter-spacing: 0.05em; width: 15%;">Price</th>
                                <th style="padding: 0.5rem 1rem; text-align: right; font-size: 0.75rem; font-weight: 500; color: #991b1b; text-transform: uppercase; letter-spacing: 0.05em; width: 20%;">Amount</th>
                            </tr>
                        </thead>
                        <tbody style="background: white;">
                            @if (Data.Items != null)
                            {
                                @for (int i = 0; i < Data.Items.Count; i++)
                                {
                                    var item = Data.Items[i];
                                    <tr style="border-top: 1px solid #fecaca;">
                                        <td style="padding: 0.5rem 1rem; word-wrap: break-word;">
                                            <div style="font-weight: 500; color: #991b1b;">@item.Name</div>
                                            @if (!string.IsNullOrEmpty(item.Description))
                                            {
                                                <div style="font-size: 0.75rem; color: #991b1b; margin-top: 0.25rem;">@item.Description</div>
                                            }
                                        </td>
                                        <td style="padding: 0.5rem 1rem;">
                                            <div style="font-size: 0.75rem; color: #991b1b;">@item.Model</div>
                                        </td>
                                        <td style="padding: 0.5rem 1rem; text-align: center;">
                                            <span style="display: inline-flex; align-items: center; padding: 0.25rem 0.5rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500; background: #fee2e2; color: #b91c1c;">
                                                @item.Quantity
                                            </span>
                                        </td>
                                        <td style="padding: 0.5rem 1rem; text-align: right; font-weight: 500; color: #991b1b;">
                                            @FormatCurrency(item.Amount, "USD")
                                        </td>
                                        <td style="padding: 0.5rem 1rem; text-align: right; font-weight: 600, color: #991b1b;">
                                            @FormatCurrency(item.Total, "USD")
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Summary Section -->
            <div style="display: flex; justify-content: flex-end; margin-top: 2rem;">
                <div style="width: 320px;">
                    <div style="background: white; border: 1px solid #fecaca; border-radius: 8px; overflow: hidden;">
                        <div style="background: #991b1b; color: white; padding: 0.5rem 1rem;">
                            <h4 style="font-size: 0.875rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; margin: 0;">Summary</h4>
                        </div>
                        <div style="padding: 1rem; font-size: 0.875rem;">
                            <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                                <span style="color: #991b1b;">Subtotal:</span>
                                <span style="font-weight: 500;">@FormatCurrency(Data.SubTotal, "USD")</span>
                            </div>
                            @if (Data.TaxPercentage > 0)
                            {
                                <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                                    <span style="color: #991b1b;">Tax (@Data.TaxPercentage%):</span>
                                    <span style="font-weight: 500;">@FormatCurrency(Data.TaxAmount, "USD")</span>
                                </div>
                            }
                            <hr style="margin: 0.5rem 0; border: none; border-top: 1px solid #fecaca;">
                            <div style="display: flex; justify-content: space-between; font-size: 1rem; font-weight: bold;">
                                <span style="color: #991b1b;">Total:</span>
                                <span style="color: #b91c1c;">@FormatCurrency(Data.GrandTotal, "USD")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Notes Section -->
            @if (!string.IsNullOrEmpty(Data.Notes))
            {
                <div style="margin-top: 2rem;">
                    <div style="background: #fef9c3; border: 1px solid #fde047; border-radius: 8px; padding: 1rem;">
                        <div style="display: flex; align-items: flex-start;">
                            <span style="margin-right: 0.75rem; color: #f59e42; margin-top: 0.125rem;">📝</span>
                            <div>
                                <h4 style="font-size: 0.875rem; font-weight: 600; color: #991b1b; margin: 0 0 0.25rem 0;">Notes</h4>
                                <p style="font-size: 0.875rem; color: #991b1b; margin: 0;">@Data.Notes</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- Footer: always at the bottom if space, or overflows to next page if not -->
        <div style="margin-top: auto; padding-top: 1rem; border-top: 1px solid #fecaca; text-align: center; margin-bottom: 4rem;">
            <p style="font-size: 0.75rem; color: #991b1b; margin: 0;">Thank you for your business!</p>
        </div>
    </div>
</BaseTemplate>

@code {
    [Parameter] public InvoiceData Data { get; set; } = new InvoiceData();

    private string FormatCurrency(decimal amount, string currency)
    {
        return string.Format("{0:C}", amount);
    }
}
